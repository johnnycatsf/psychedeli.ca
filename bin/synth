#!/bin/bash
#
# = synth
#
# The psychedeli.ca blog generator. Compresses and minifies JavaScript files,

# javascripts
uglifyjs --no-copyright js/jquery.js js/jquery.facebox.js js/jquery.linkifyTags.js js/functions.js js/ready.js > js/application.js;
echo "uglified to js/application.js";

# stylesheets
compass compile css/app/screen.scss;
compass compile css/app/print.scss;

# content
jekyll

!!!
%html
  %head
    = html5_meta_tags
    = csrf_meta_tags
    = title_tag
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = yield(:head)
  %body
    %header.navbar.navbar-fixed-top
      %nav.navbar-inner
        .container
          = render 'layouts/navigation'
    #main{:role => "main"}
      .container
        .content
          .row
            .span12
              = render 'layouts/messages'
              = yield
          %footer

---
layout: nil
---
<?xml version="1.0" encoding="UTF-8"?>
<rss xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" version="2.0">
  <channel>
    <title>psychedeli.ca podcast</title>
    <link>http://psychedeli.ca</link>
    <language>en-us</language>
    <copyright>℗ &amp; © 2011 Tom Scott</copyright>
    <itunes:subtitle>A show about everything</itunes:subtitle>
    <itunes:author>Tom Phoolery</itunes:author>
    <itunes:summary>
      Musical experiments, fun time mix sets, and general tomfoolery from the
      man you'd least expect...
    </itunes:summary>
    <description>
      Musical experiments, fun time mix sets, and general tomfoolery from the
      man you'd least expect...
    </description>
    <itunes:owner>
      <itunes:name>Tom Phoolery</itunes:name>
      <itunes:email>tom@thewonderbars.com</itunes:email>
    </itunes:owner>
    <itunes:image href="http://psychedeli.ca/assets/logo-podcast.jpg"/>
    <itunes:category text="Music" />

    {% for post in site.posts %}
      {% if post.enclosure.exists? %}
        <item>
          <title>{{ post.title }}</title>
          <itunes:author>Tom Phoolery</itunes:author>
          <itunes:subtitle>{{ post.content | xml_escape }}</itunes:subtitle>
          <itunes:summary>{{ post.content | xml_escape }}</itunes:summary>
          <itunes:image href="{{ post.image }}" />
          <enclosure url="{{ post.enclosure.url }}" length="999999" type="audio/x-m4a"/>
          <guid>{{ post.enclosure }}</guid>
          <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %Z" }}</pubDate>
          <itunes:duration>{{ post.enclosure.duration | date: "%H:%M:%S" }}</itunes:duration>
          <itunes:keywords>{{ post.tags }}</itunes:keywords>
        </item>
      {% endif %}
    {% endfor %}
  </channel>
</rss>
